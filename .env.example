# ===========================================
# 605B.AI ENVIRONMENT CONFIGURATION
# ===========================================

# Anthropic API
ANTHROPIC_API_KEY=sk-ant-your-key-here

# ElevenLabs TTS (optional)
ELEVENLABS_API_KEY=your-elevenlabs-key

# ===========================================
# CLERK AUTHENTICATION
# ===========================================
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxx
CLERK_SECRET_KEY=sk_test_xxx

# Clerk URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# ===========================================
# UPSTASH REDIS
# ===========================================
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# ===========================================
# STRIPE PAYMENTS
# ===========================================
# See .env.stripe.example for detailed setup instructions

# API Keys
STRIPE_SECRET_KEY=sk_live_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_xxx

# Tier Product Price IDs (one-time payments only)
STRIPE_TOOLKIT_PRICE_ID=price_xxx        # $39 - Dispute Toolkit
STRIPE_ADVANCED_PRICE_ID=price_xxx       # $89 - Advanced Dispute Suite
STRIPE_IDENTITY_THEFT_PRICE_ID=price_xxx # $179 - 605B Identity Theft Toolkit

# Add-on Price IDs
STRIPE_EXTRA_ANALYSIS_PRICE_ID=price_xxx # $7 - Additional Report Analysis
STRIPE_AI_CREDITS_PRICE_ID=price_xxx     # $10 - AI Strategist Credits
STRIPE_ATTORNEY_EXPORT_PRICE_ID=price_xxx # $39 - Attorney Export Pack

# ===========================================
# APP CONFIGURATION
# ===========================================
NEXT_PUBLIC_APP_URL=https://605b.ai
DEBUG_ENTITLEMENTS_ALLOWLIST=

# ===========================================
# AD TRACKING (optional)
# ===========================================
# Meta Pixel ID (from Meta Events Manager)
# Pixel loads only in production unless NEXT_PUBLIC_META_PIXEL_PREVIEW=true
NEXT_PUBLIC_META_PIXEL_ID=
# Optional: enable pixel in preview deployments
# NEXT_PUBLIC_META_PIXEL_PREVIEW=true
# Google Ads ID (from Google Ads)
# NEXT_PUBLIC_GOOGLE_ADS_ID=AW-XXXXXXXXX

# ===========================================
# MOBILE IAP VERIFICATION
# ===========================================
# Apple: Shared Secret from App Store Connect > App > In-App Purchases > App-Specific Shared Secret
# APPLE_IAP_SHARED_SECRET=your_shared_secret_here

# Google: Service account JSON with Android Publisher API access
# Either set the full JSON string or the file path (not both)
# GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account",...}
# GOOGLE_SERVICE_ACCOUNT_KEY_PATH=/path/to/service-account.json
# GOOGLE_PLAY_PACKAGE_NAME=com.creditclear.app

# ===========================================
# BETA ACCESS (optional)
# ===========================================
# Comma-separated list of email addresses for beta testers
# Beta users get full access to all features without payment
# Remove this line or leave empty to disable beta access
# BETA_WHITELIST_EMAILS=tester1@example.com,tester2@example.com
# Optional: grant beta by Clerk user ID (use when email whitelist fails, e.g. cross-instance)
# BETA_WHITELIST_USER_IDS=user_2abc123,user_2def456